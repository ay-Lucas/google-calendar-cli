{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["warn", "double"],
		"semi": ["error", "always"],
		"no-unused-vars": "warn",
		"no-constant-condition": "off",
		"no-undef": "off"
	}
}
